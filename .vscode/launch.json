    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "probe-rs",
            "cwd": "${workspaceFolder}",
            "connectUnderReset": true,
            "chip": "STM32F070F6Px",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true
            },
            "coreConfigs": [
                {
                    "programBinary": "./target/thumbv6m-none-eabi/debug/spirit1-embedded-example"
                }
            ]
        }
    ]
}